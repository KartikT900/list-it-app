{
    "compilerOptions": {
      "allowJs": true,
      "baseUrl": "src",
      "checkJs": true,
      "esModuleInterop": true,
      "jsx": "react",
      "module": "CommonJS",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "resolveJsonModule": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "target": "ES2021",
      "outDir": ""
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}